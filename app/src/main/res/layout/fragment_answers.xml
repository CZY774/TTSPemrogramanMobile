<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:id="@+id/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TTS Pemrograman Mobile😨😱🥵🤡🤯😭"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Subheader -->
            <TextView
                android:id="@+id/subheader_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selamat mengerjakan! Pilihlah jawaban yang benar dari pertanyaan berikut😎🤫🧏‍♂️:"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Question Text -->
            <TextView
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Radio buttons akan ditambahkan di sini secara otomatis -->
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/check_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cek Jawaban🥺🫣"
        android:layout_marginTop="16dp"
        android:background="@color/primary_color"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/credit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cornelius Yoga - 672022204🗿"
        android:textSize="12sp"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp" />

</LinearLayout>